@{
    Layout = "~/Views/Shared/_Layout_basic.cshtml";
    ViewBag.Title = "ForgetPassword";
}
<main>

    <!-- main content -->
    <div class="main-container app-wow">

        <div class="container h-100">
            <div class="row align-items-center h-100">
                <div class="col-12 mx-auto">
                    <div class="py-8">
                        <div class="auth-box">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="d-flex align-items-center justify-content-center warning-gradient text-secondary px-9 py-5 h-100">
                                        <div class="text-center">
                                            <h5 class="text-uppercase">Forgot Password</h5>
                                            <h1 class="text-uppercase display-3">Basketo</h1>
                                            <span class="lead-1 fw-400">Admin Panel</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-7">
                                    <div class="px-4 pr-md-7 py-6 pl-md-0">
                                        <h4 class="mb-6 text-light">Forgot Password</h4>
                                        <div>
                                            <form class="input-light">
                                                <div>
                                                    <p class="fw-500">Enter your username or email address and we will send you a link to reset your password.</p>
                                                </div>
                                                <div class="form-group input-group">
                                                    <input type="text" class="form-control" name="Email" id="Email" placeholder="Email or Username">
                                                </div>
                                                <div class="form-group mt-6">
                                                    <button id="ForgotPassword" class="btn btn-block btn-warning" type="button">Forgot Password</button>
                                                </div>
                                                <div>
                                                    <span onclick="history.back()" class="btn btn-sm fw-600 pl-0"><i class="fas fa-arrow-left mr-1"></i>Back</span>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
<script type="text/javascript">
    $(document).ready(function () {
        $("#ForgotPassword").click(function () {
            var email = $("#Email").val();
            $.ajax({ type: "GET", url: "/authentication/forgotpasswordemail?email=" + email })
                .done(function (data) {
                    toastr.success(data);
                });
        });
    });
</script>